<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">#000</item>
    </style>


    <style name="TeamImageStyle">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">185dp</item>
    </style>

    <style name="TeamNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth"> 170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AddScoreBtnStyle">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="ScoreAmountStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:maxWidth">165dp</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="ResetScoresBtnStyle">
        <item name="android:layout_width">253dp</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="ParserStyle">
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:textSize">70sp</item>
    </style>



</resources>
